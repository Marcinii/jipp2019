<Window x:Class="Konwerter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Konwerter"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ComboBox x:Name="convenrsionTypeCombo" HorizontalAlignment="Left" Margin="186,14,0,0" VerticalAlignment="Top" Width="596" SelectionChanged="ConvenrsionTypeCombo_SelectionChanged"/>
        <Label Content="Choose the type of conversion" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Content="From:" HorizontalAlignment="Left" Margin="9,52,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="fromCombo" HorizontalAlignment="Left" Margin="60,56,0,0" VerticalAlignment="Top" Width="300" SelectionChanged="FromCombo_SelectionChanged"/>
        <Label Content="To:" HorizontalAlignment="Left" Margin="10,101,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="toCombo" HorizontalAlignment="Left" Margin="60,105,0,0" VerticalAlignment="Top" Width="300" SelectionChanged="ToCombo_SelectionChanged"/>
        <Label Content="Input the value:" HorizontalAlignment="Left" Margin="413,52,0,0" VerticalAlignment="Top"/>
        <Label Content="Converted value:" HorizontalAlignment="Left" Margin="413,101,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="valueToConvert" HorizontalAlignment="Left" Height="23" Margin="532,56,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="250"/>
        <TextBlock x:Name="convertedValue" HorizontalAlignment="Left" Margin="532,106,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="250"/>
        <DataGrid x:Name="dbGrid" HorizontalAlignment="Left" Height="271" Margin="9,139,0,0" VerticalAlignment="Top" Width="773"/>
        <Button x:Name="convertButton" Content="Convert" HorizontalAlignment="Left" Margin="610,82,0,0" VerticalAlignment="Top" Width="75" Click="ConvertButton_Click"/>

    </Grid>
</Window>
