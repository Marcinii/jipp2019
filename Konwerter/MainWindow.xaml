<Window x:Class="Konwerter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Konwerter"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Window.Resources>
        <local:UnitsConverterDataSet x:Key="unitsConverterDataSet"/>
        <CollectionViewSource x:Key="statistics_tkViewSource" Source="{Binding Statistics_tk, Source={StaticResource unitsConverterDataSet}}"/>
    </Window.Resources>
    <Grid DataContext="{StaticResource statistics_tkViewSource}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="157*"/>
            <ColumnDefinition Width="239*"/>
        </Grid.ColumnDefinitions>
        <ComboBox x:Name="TypeComboBox" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="115" Height="24" SelectionChanged="TypeSelectionChanged"/>
        <ComboBox x:Name="ValTypeComboBoxFrom" HorizontalAlignment="Left" Margin="10,61,0,0" VerticalAlignment="Top" Width="115" Height="24"/>
        <ComboBox x:Name="ValTypeComboBoxTo" HorizontalAlignment="Left" Margin="10,116,0,0" VerticalAlignment="Top" Width="115" Height="24" RenderTransformOrigin="0.443,0.584"/>
        <TextBox x:Name="IntConvertTextBox" HorizontalAlignment="Left" Height="24" Margin="10,168,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="115"/>
        <Button x:Name="CalculateButton" Content="Oblicz" HorizontalAlignment="Left" Margin="10,223,0,0" VerticalAlignment="Top" Width="115" Height="24" Click="CalculateButton_Click"/>
        <TextBox x:Name="Result" HorizontalAlignment="Left" Height="23" Margin="10,267,0,0" TextWrapping="Wrap" Text="Wynik" VerticalAlignment="Top" Width="115"/>
        <DataGrid x:Name="statistics_tkDataGrid" AutoGenerateColumns="False" EnableRowVirtualization="True" ItemsSource="{Binding}" Margin="149,16,38,33" RowDetailsVisibilityMode="VisibleWhenSelected" Grid.ColumnSpan="2">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="idColumn" Binding="{Binding Id}" Header="Id" IsReadOnly="True" Width="SizeToHeader"/>
                <DataGridTemplateColumn x:Name="dateTimeColumn" Header="Date Time" Width="SizeToHeader">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <DatePicker SelectedDate="{Binding DateTime, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn x:Name="unitFromColumn" Binding="{Binding UnitFrom}" Header="Unit From" Width="SizeToHeader"/>
                <DataGridTextColumn x:Name="unitToColumn" Binding="{Binding UnitTo}" Header="Unit To" Width="SizeToHeader"/>
                <DataGridTextColumn x:Name="typeColumn" Binding="{Binding Type}" Header="Type" Width="SizeToHeader"/>
                <DataGridTextColumn x:Name="rawValueColumn" Binding="{Binding RawValue}" Header="Raw Value" Width="SizeToHeader"/>
                <DataGridTextColumn x:Name="convertedValueColumn" Binding="{Binding ConvertedValue}" Header="Converted Value" Width="SizeToHeader"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
