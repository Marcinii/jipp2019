        <Label Content="Kategoria jednostek:" HorizontalAlignment="Left" Margin="75,37,0,0" VerticalAlignment="Top"/>
        <Button x:Name="StatystykiButton" Content="Statystyki" HorizontalAlignment="Left" Margin="580,196,0,0" VerticalAlignment="Top" Width="75" Click="StatystykiButton_Click"/>

    </Grid>
</Window>
