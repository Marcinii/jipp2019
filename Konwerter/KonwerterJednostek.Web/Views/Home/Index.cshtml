@model IEnumerable<Konwerter.Serwisy.IKonwerter>
@{
	ViewBag.Title = "Home Page";
}

<h1>Konwerter jednostek</h1>

@foreach (Konwerter.Serwisy.IKonwerter konwerter in Model)
{
	using (Ajax.BeginForm("Konwertuj",
		new { converterType = konwerter.GetType().AssemblyQualifiedName },
		new AjaxOptions() { UpdateTargetId = konwerter.Nazwa + "result" } ))
	{
		<div>@konwerter.Nazwa</div>
		@Html.DropDownList("jednostkaZ", new SelectList(konwerter.Jednostki))
		@Html.TextBox("input")
		@Html.DropDownList("jednostkaNa", new SelectList(konwerter.Jednostki))
		<button type="submit">Konwertuj</button>
		<label id="@(konwerter.Nazwa + "result")"></label>
	}
}
