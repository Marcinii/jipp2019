<Window x:Class="Zadanie1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zadanie1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="450" Margin="10,10,0,0" VerticalAlignment="Top" Width="800">
            <TabItem Header="Temp">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="29*"/>
                        <ColumnDefinition Width="37*"/>
                    </Grid.ColumnDefinitions>
                    <Button Content="Convert" HorizontalAlignment="Left" Margin="170,113,0,0" VerticalAlignment="Top" Width="75" Grid.Column="1" Click="Button_Click"/>
                    <TextBox x:Name="Input" HorizontalAlignment="Left" Height="20" Margin="34,111,0,0" TextWrapping="Wrap" Text="Input" VerticalAlignment="Top" Width="120" TextChanged="from_TextChanged"/>
                    <TextBox HorizontalAlignment="Left" Height="20" Margin="250,113,0,0" TextWrapping="Wrap" Text="Results" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
                    <TextBlock HorizontalAlignment="Left" Margin="159,111,0,0" TextWrapping="Wrap" Text="degrees" VerticalAlignment="Top" RenderTransformOrigin="-0.287,-0.008"/>
                    <TextBlock HorizontalAlignment="Left" Margin="8,51,0,0" TextWrapping="Wrap" Text="Converted" VerticalAlignment="Top" RenderTransformOrigin="-0.287,-0.008" Grid.Column="1"/>
                    <TextBlock HorizontalAlignment="Left" Margin="311,112,0,0" TextWrapping="Wrap" Text="to" VerticalAlignment="Top" RenderTransformOrigin="-0.287,-0.008"/>
                    <ComboBox x:Name="from_unit" HorizontalAlignment="Left" Margin="206,111,0,0" VerticalAlignment="Top" Width="100" Height="20">
                        <ComboBoxItem Content="Celsius"></ComboBoxItem>
                        <ComboBoxItem Content="Fahrenheit"></ComboBoxItem>
                        <ComboBoxItem Content="Kelvin"></ComboBoxItem>
                    </ComboBox>
                    <ComboBox x:Name="to_unit" HorizontalAlignment="Left" Margin="327,112,0,0" VerticalAlignment="Top" Width="100" Height="19" Grid.ColumnSpan="2">
                        <ComboBoxItem Content="Celsius"></ComboBoxItem>
                        <ComboBoxItem Content="Fahrenheit"></ComboBoxItem>
                        <ComboBoxItem Content="Kelvin"></ComboBoxItem>
                    </ComboBox>
                </Grid>
            </TabItem>
            <TabItem Header="Length"></TabItem>
            <TabItem Header="Mass"></TabItem>
        </TabControl>

    </Grid>
</Window>
