        <ComboBox x:Name="CboxListMassB" HorizontalAlignment="Left" Margin="380,145,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="CboxListMassB_SelectionChanged" Height="22" Grid.Column="1"/>

