        <ComboBox x:Name="FromComboBox" HorizontalAlignment="Left" Height="32" Margin="165,56,0,0" VerticalAlignment="Top" Width="108"/>
        <ComboBox x:Name="ToComboBox" HorizontalAlignment="Left" Height="32" Margin="612,56,0,0" VerticalAlignment="Top" Width="132"/>
        <TextBox x:Name="InputTextBox" HorizontalAlignment="Left" Height="35" Margin="30,53,0,0" TextWrapping="Wrap" Text="Wpisz coś" VerticalAlignment="Top" Width="93"/>
        <TextBlock x:Name="ResultTextBlock" HorizontalAlignment="Left" Height="35" Margin="450,53,0,0" TextWrapping="Wrap" Text="Wartość przekonwertowana" VerticalAlignment="Top" Width="108"/>

    </Grid>
</Window>
