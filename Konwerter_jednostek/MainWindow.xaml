<Window x:Class="Konwerter_jednostek.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Konwerter_jednostek"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="Input" HorizontalAlignment="Left" Margin="85,127,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="Output" HorizontalAlignment="Left" Margin="537,127,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsEnabled="False"/>
        <ComboBox x:Name="InputType" HorizontalAlignment="Left" Margin="85,197,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="InputType_SelectionChanged"/>
        <ComboBox x:Name="OutputType" HorizontalAlignment="Left" Margin="537,195,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="OutputType_SelectionChanged"/>
        <Button x:Name="ChangeConversion" Content="Zamień" HorizontalAlignment="Left" Margin="340,127,0,0" VerticalAlignment="Top"/>
        <Button x:Name="ConvertButton" Content="Konwertuj" HorizontalAlignment="Left" Margin="333,197,0,0" VerticalAlignment="Top" Click="ConvertButton_Click"/>
        <DataGrid x:Name="Lista_statystyk" Margin="31,245,31,32"/>

    </Grid>
</Window>
