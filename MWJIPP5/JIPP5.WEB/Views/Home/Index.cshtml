@model IEnumerable<JIPP5.SDK.IKonwerter>
@{
    ViewBag.Title = "Home Page";
}

<h1>Konwerter jednostek</h1>

@foreach (JIPP5.SDK.IKonwerter converter in Model)
{
    using (Ajax.BeginForm("Convert",
        new { converterType = converter.GetType().AssemblyQualifiedName },
        new AjaxOptions() { UpdateTargetId = converter.Nazwa + "result" }))
    {
        <h3> @converter.Nazwa </h3>
        @Html.DropDownList("unitFrom", new SelectList(converter.JakieJednostki))
        @Html.TextBox("valueToConvert")
        @Html.DropDownList("unitTo", new SelectList(converter.JakieJednostki))
        <button type="submit"> Konwertuj </button>
        <label id="@(converter.Nazwa + "result")"></label>
    }
}