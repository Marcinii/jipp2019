@model IEnumerable<JIPP5_LAB.SDK.IConverterHelper>
@{
    ViewBag.Title = "Home Page";
}

<h1>Konwerter jednostek</h1>

@foreach (JIPP5_LAB.SDK.IConverterHelper converter in Model)
{
    using (Ajax.BeginForm("Convert",
        new { converterType = converter.GetType().AssemblyQualifiedName },
        new AjaxOptions() { UpdateTargetId = converter.Name + "result" }))
    {
        <h3> @converter.Name </h3>
        @Html.DropDownList("unitFrom", new SelectList(converter.UnitTypes))
        @Html.TextBox("valueToConvert")
        @Html.DropDownList("unitTo", new SelectList(converter.UnitTypes))
        <button type="submit"> Konwertuj </button>
        <label id="@(converter.Name + "result")"></label>
    }
}